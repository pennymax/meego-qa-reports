<tr class="testcase <%= result_class(testcase, "result_") %>" id="testcase-<%= testcase.id %>" style="<%= hide_passing(testcase) %>">
  <td class="testcase_name"><%= testcase.name %></td>
  <td class="testcase_result <%= result_class(testcase) %> <%= 'edit' if @editing %>"><span class="content"><%= result_html(testcase) %></span> </td>
  <td class="testcase_notes <%= 'edit' if @editing %>">
